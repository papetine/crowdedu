{% extends 'home/index.html.twig' %}
{% block meilleurs_ventes %}{% endblock %}
{% block categories %}
<div class="banner">
		<div class="container">
			<div class="row">
			 {% for categorieCour in categories %}
					<div class="col-md-4">
					<div class="banner_item align-items-center" style="background-image:url('data:image/png;base64,{{ categorieCour.imgC}}'); background-size:80%;">
						<div class="banner_category">
							<a href="{{ path('page_produitsByCategory',{'categorie':categorieCour.id} ) }}">{{categorieCour.libelle}}</a>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
	{% endblock %}
	{% block cat %}
		<div class="new_arrivals">
		<div class="container">
			<div class="row align-items-center">
				<div class="col text-center">
					<div class="new_arrivals_sorting">
						<ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
							<li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter="*">tous nos cours</li>							
						{% for categorieCour in categories %}
							<li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter=".women">{{categorieCour.libelle}}</li>
							{% endfor %}
							</ul>
						</div>
					</div>
				</div>
	
{% endblock %}
{% block cours  %}
<style>
.rower{
	padding-left:20px;
}
.ptides{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
    font-weight: 600;
    height: 36px;
    min-height: 42px;
    font-size: 15px;
    color: #29303B;
    margin-bottom: 10px;
}
.prix{
font-family:ubuntu;
color:#96bf31;
font-size: 14px;
padding-left: 2px;
margin-left:7px;
margin-top:10px;
text-transform: uppercase;
}
a:link 
{ 
text-decoration:none; 
} 
</style>
		<div class="row ">
				<div class="col" style="background-size:50%;">
					<div class="product-grid " data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
                {% for produit in produits %}
						<!-- Product 1 -->						
						<div class="product-item men ">
							<div class="product discount product_filter">
								<div class="product_image">
								<a href="{{path('cour', {'slug':produit.slug})}}">
									<img src="data:image/png;base64,{{ produit.image }}" width="240" height="135" alt="">
								</a>
								</div>
								<div class="favorite favorite_left"></div>
								<div class="product_info">
									<span class="product_name ptides"><a href="{{path('cour', {'slug':produit.slug})}}">{{produit.petitDescription}}</a></span>
								</div>
								<div><span class="prix">{{produit.prix}}CFA </span></div>
							</div>
							<div class="red_button add_to_cart_button"><a href="{{ path('page_ajouterPanier',{'id':produit.id} ) }}">Ajouter au panier</a></div>
						</div>
                        {% endfor %}
					</div>
				</div>
			</div>
{% endblock %}
	

